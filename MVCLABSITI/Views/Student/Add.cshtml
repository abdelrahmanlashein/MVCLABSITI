@model Student
<form action="/Student/Add" method="post">

    <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input type="text" name="Name" class="form-control" id="name" placeholder="Enter full name">
    </div>
    <div class="mb-3">
        <label for="age" class="form-label">Age</label>
        <input type="number" name="Age" class="form-control" id="age" placeholder="Enter age">
    </div>
    <div class="mb-3">
        <label for="address" class="form-label">Address</label>
        <input type="text" name="Address" class="form-control" id="address" placeholder="Enter address">
    </div>
    <div class="mb-3">
        <label for="image" class="form-label">Image (Path or URL)</label>
        <input type="text" name="Image" class="form-control" id="image" placeholder="Enter image path or URL">
    </div>
    <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" name="Email" class="form-control" id="email" aria-describedby="emailHelp" placeholder="Enter email">
        <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
    </div>
    <div class="mb-3">
        <label for="deptid" class="form-label">DeptId</label>
        <input type="text" name="DeptId" class="form-control" id="deptid" placeholder="Enter Department ID">
    </div>
    <button type="submit" class="btn btn-primary">Add Student</button>
    <a href="/Student/GetAll" class="btn btn-secondary ms-2">Cancel</a>
</form>