@model MVCLABSITI.ViewModels.StudentDetailsViewModel

<div class="container mt-4">

    <h3>Student Details</h3>

    <table class="table table-bordered">
        <tbody>
            <tr>
                <th scope="row">SSN</th>
                <td>@Model.StudentId</td>
            </tr>
            <tr>
                <th scope="row">Name</th>
                <td>@Model.StudentName</td>
            </tr>
            <tr>
                <th scope="row">Department</th>
                <td>@Model.DepartmentName</td>
            </tr>
        </tbody>
    </table>

    <h4 class="mt-4 mb-3">Enrolled Courses</h4>

    @if (Model.Enrollments != null && Model.Enrollments.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Course Name</th>
                    <th scope="col">Topic</th>
                    <th scope="col">Total Degree</th>
                    <th scope="col">Grade</th>
                    <th scope="col">Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var e in Model.Enrollments)
                {
                    <tr>
                        <td>@e.Course.Name</td>
                        <td>@e.Course.Topic</td>
                        <td>@e.Course.Degree</td>
                        @if (e.Grade < 60)
                        {
                            <td class="text-danger fw-bold">@e.Grade</td>
                            <td class="text-danger fw-bold">Failed</td>
                        }
                        else
                        {
                            <td class="text-success fw-bold">@e.Grade</td>
                            <td class="text-success fw-bold">Passed</td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info">
            Student is not enrolled in any courses
        </div>
    }

</div>